{{#if data}}
<div class="row mt-4">
    <div class="col-sm-8 col-md-7 col-lg-4 col-xl-3 mx-auto px-4">
        <div class="card">
            <div class="background">
                <div class="city">{{data.name}}, {{data.sys.country}}</div>
                <div class="weather">
                    <div class="icon">
                        <img src="http://openweathermap.org/img/wn/{{icon}}@2x.png" id="icon">
                    </div>
                    <h5 class="temp">{{temp}} <span style="font-size: 2.5">&#176;</span></h5>
                    <p class="text-light">{{description}}</p>
                </div>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Feels like {{feels}} <span style="font-size: 1.6rem">&#176;</span></li>
                    <li class="list-group-item">Will be maximum {{max}} <span style="font-size: 1.6rem">&#176;</span>
                    </li>
                    <li class="list-group-item">Will be minimum {{max}} <span style="font-size: 1.6rem">&#176;</span>
                    </li>
                    <li class="list-group-item">Wind speed {{speed}} m/s</li>
                </ul>
            </div>
        </div>
    </div>
</div>
{{else if message}}
<div class="col-sm-8 col-md-7 col-lg-4 col-xl-3 mx-auto px-4 mt-4">
    <div class="alert alert-danger">Please enter valid city name.</div>
</div>
{{/if}}
<div class="row mt-4">
    <div class="col-sm-8 col-md-7 col-lg-4 col-xl-3 mx-auto px-4">
        <div class="card p-4">
            <form action="/" method="post" autocomplete="off">
                <div class="form-group">
                    <input type="text" name="city" class="form-control text-center"
                        placeholder="Enter city for weather">
                </div>
                <button type="submit" class="btn btn-dark btn-block">
                    <ion-icon name="search-outline"></ion-icon>
                </button>
            </form>
        </div>
    </div>
</div>